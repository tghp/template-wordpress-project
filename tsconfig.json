{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    /* Modules */
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./*.d.ts"]
}
